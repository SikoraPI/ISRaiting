<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
            <Setter Property="wpf:HintAssist.HintOpacity" Value="1"></Setter>
            <Setter Property="wpf:HintAssist.IsFloating" Value="True"></Setter>
            <Setter Property="Height" Value="37"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource    MaterialDesignFloatingHintDatePicker}">
            <Setter Property="wpf:HintAssist.HintOpacity" Value="1"></Setter>
            <Setter Property="wpf:HintAssist.IsFloating" Value="True"></Setter>
            <Setter Property="Height" Value="37"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    <Style TargetType="ComboBox" BasedOn="{StaticResource  MaterialDesignFloatingHintComboBox}">
        <Setter Property="wpf:HintAssist.HintOpacity" Value="1"></Setter>
        <Setter Property="wpf:HintAssist.IsFloating" Value="True"></Setter>
        <Setter Property="Height" Value="37"></Setter>
        <Setter Property="Margin" Value="5"></Setter>
    </Style>
</ResourceDictionary>